<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "author", "Author" %>
    <%= form.text_field "name" %>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
  </p>
  <%= form.submit %>
<% end %>